<%- include('./partials/navbar.ejs') %>
<div id='newSchedule'></div>
    <section class='new-container cont col-md-6'>
        <form id='schedule-form' method='POST' action='/homepage'>
            <div class='container new-cont col-md-9'>
                <div class='row'>
                    <h2 class='new-title'>Add a new schedule:</h2>
                </div>
                <div class='row'>
                    <label for='user_id'>User</label>
                    <input type='text' name='user_id' required>
                </div>
                <div class='row'>
                    <label for='day'>Day</label>
                    <select name='day' required>
                        <option value='Monday'>Monday</option>
                        <option value='Tuesday'>Tuesday</option>
                        <option value='Wednesday'>Wednesday</option>
                        <option value='Thursday'>Thursday</option>
                        <option value='Friday'>Friday</option>
                        <option value='Saturday'>Saturday</option>
                        <option value='Sunday'>Sunday</option>
                    </select>
                </div>
                <div class='row'>
                    <label for='start_at'>Start at:</label>
                    <input type='text' name='start_at' required>
                </div>
                <div class='row'>
                    <label for='end_at'>End at:</label>
                    <input type='text' name='end_at' required>
                </div>
                <div class='row col-sm-4 login-btn'>
                    <input type='submit' value='SEND'>
                </div>   
            </div>
        </form>
    </section>
    <section class='user-container cont col-md-6'>
            <h2 class='user-title'>YOUR SCHEDULES:</h2>
            <table class='user-table'>
                <tr>
                    <th>Day</th>
                    <th>Start at:</th>
                    <th>End at:</th>
                </tr>
                <% for (let i=0; i<schedules.length; i++) { %>
                <tr>
                    <td><%= schedules[i].day %></td>
                    <td><%= schedules[i].start_at %></td>
                    <td><%= schedules[i].end_at %></td>
                </tr>
                <% } %>
            </table>
        </div>
    </section>
</div>
